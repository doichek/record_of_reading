<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark">
    <%= link_to 'ヨムコレ', books_path(current_user), class: "navbar-brand" %>
    
    <% if logged_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to  users_path(current_user), class: 'nav-link' do%>
            <i class="fas fa-users"></i>ユーザ一覧
          <% end %>
        </li>
        
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
          <ul class="dropdown-menu dropdown-menu-right" style="background-color:rgba(51, 81, 117, 1);">
            
            <li class="dropdown-item" style="background-color:rgba(51, 81, 117, 1);">
