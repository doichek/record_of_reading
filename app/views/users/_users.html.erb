<!--index,followers,followingsからパーシャルされる-->


<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View more', toppages_path(user) %></p>
          </div>
          
          <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>好きなジャンル</th>
                            <th>好きな著者</th>
                            <th>コメント</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                              <% if user.genre == nil or user.genre == '' %>
                                未登録
                              <% else %>
                                <%= user.genre %>
                              <% end %>
                            </td>
                            <td>
                              <% if user.author == nil or user.author == '' %>
                                未登録
                              <% else %>
                                <%= user.author %>
                              <% end %>
                            </td>
                              <td>
                              <% if user.comment == nil or user.comment == '' %>
                                未登録
                              <% else %>
                                <%= user.comment %>
                              <% end %>
                            </td>
                        </tr>
                    </tbody>
            </table>
          
          
          
          
          
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
