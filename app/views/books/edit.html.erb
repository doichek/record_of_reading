<h1>id: <%= @book.id %> 登録書籍の変更</h1>
<div class="row">
  
  <div class="col-6">
      
    <%= form_with(model: @book, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :status, '状態' %>

        <%= f.select :status, {'未読': 0, '読中': 1, '読了': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :title, '書籍名' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :author, '著者' %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :comment, 'コメント' %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= link_to "登録を削除する", @book, method: :delete, data: { confirm: "本当に削除してよろしいですか" }, class: 'btn btn-danger btn-sm' %>
      
  </div>
</div>

