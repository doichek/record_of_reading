<!--index,followers,followingsからパーシャルされる-->


<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View more', toppages_path(user) %></p>
          </div>
          
          <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>好きなジャンル</th>
                            <th>好きな著者</th>
                            <th>コメント</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= user.genre %></td>
                            <td><%= user.author %></td>
                            <td><%= user.comment %></td>
                        </tr>
                    </tbody>
            </table>
          
          
          
          
          
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
