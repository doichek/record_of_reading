<div class="text-center">
  <h1>No.<%= @book.id %>の変更</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
      
    <%= form_with(model: @book, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :status, '状態' %>

        <%= f.select :status, {'未読': 0, '読中': 1, '読了': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :title, '書籍名' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :author, '著者' %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :comment, 'コメント' %>
        <%= f.text_area :comment, class: 'form-control' %>
      </div>

      <%= f.submit '変更', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= link_to "削除", @book, method: :delete, data: { confirm: "本当に削除してよろしいですか" }, class: 'btn btn-danger btn-block' %>
      
  </div>
</div>

