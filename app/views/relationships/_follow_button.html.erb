<!--toppages/indexからパーシャルされる-->

<% unless current_user == user %>

  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.relationships.find_by(follow_id: user.id), local: true, method: :delete, :class => "d-inline") do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
        <%= f.button :type => "submit", :class => "btn btn-success pt-1" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
          <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
        </svg>
         <% end %>
      <!--%= f.submit 'フォロー解除', class: 'btn btn-danger', :style => 'padding-bottom: 0px; padding-top: 0px;'%>-->
    <% end %>
  <% else %>
    <%= form_with(model: current_user.relationships.build, local: true, :class => "d-inline") do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.button :type => "submit", :class => "btn btn-outline-success pt-1" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
          </svg>
      <% end %>
      <!--%= f.submit 'フォローする', class: 'btn btn-primary', :style => 'padding-bottom: 0px; padding-top: 0px;'%>-->
    <% end %>
  <% end %>
  
<% end %>