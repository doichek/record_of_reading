<div class="text-center">
  <h1>No.<%= @book.id %>の詳細</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>状態</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>            
            <% if @book.status == '0'%>
                未読
            <%elsif @book.status == '1'%>
                読中
            <% else %>
                読了
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>書籍名</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=@book.title%></td>
        </tr>
      </tbody>
    </table>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>著者名</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=@book.author%></td>
        </tr>
      </tbody>
    </table>
    
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @book.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
      </tbody>
    </table>
    
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>感想</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="white-space:pre-line"><%=@book.comment%></td>
        </tr>
      </tbody>
    </table>
    
    <% if current_user.id == @book.user_id %>
      <%= link_to "編集", edit_book_path(@book), class: 'btn btn-primary btn-block' %>
      <%= link_to "削除", @book, method: :delete, data: { confirm: "本当に削除してよろしいですか" }, class: 'btn btn-danger btn-block', style: 'margin-bottom: 30px;' %>
    <% end %>
  </div>
</div>
